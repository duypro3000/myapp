<%
  // === Logic giá & giảm giá ===
  const hasSale = Number(p.sale_price || 0) > 0 && Number(p.sale_price) < Number(p.price || 0);
  const cover = p.cover_image_url || '/public/img/placeholder.png';
  const finalPrice = Number(p.sale_price || p.flash_price || p.price || 0);
  const oldPrice   = Number(p.price || 0);
  const discount   = hasSale ? Math.max(1, Math.round((1 - finalPrice / oldPrice) * 100)) : 0;
%>

<article class="product-card" data-animate="fade-up">
  <!-- MEDIA -->
  <div class="pc-media">
    <% if (hasSale) { %>
      <span class="pc-badge">-<%= discount %>%</span>
    <% } %>

    <a href="/p/<%= p.slug %>" class="pc-thumb" title="<%= p.name %>">
      <img src="<%= cover %>" alt="<%= p.name %>" loading="lazy" class="pc-img"/>
    </a>
  </div>

  <!-- INFO -->
  <div class="pc-info">
    <a href="/p/<%= p.slug %>" class="pc-title" title="<%= p.name %>"><%= p.name %></a>
    <div class="pc-price">
      <% if (hasSale) { %>
        <span class="pc-price__now"><%= finalPrice.toLocaleString() %>₫</span>
        <span class="pc-price__old"><%= oldPrice.toLocaleString() %>₫</span>
      <% } else { %>
        <span class="pc-price__now"><%= (p.price || 0).toLocaleString() %>₫</span>
      <% } %>
    </div>
    
    <!-- Action Buttons -->
    <div class="pc-actions">
      <form action="/cart/add" method="post" class="pc-cart-form" data-product-id="<%= p.id %>">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
        <input type="hidden" name="product_id" value="<%= p.id %>"/>
        <input type="hidden" name="quantity" value="1"/>
        <button type="submit" class="pc-btn pc-btn-primary">
          <i class="ri-shopping-cart-2-line"></i>
          <span>Thêm vào giỏ hàng</span>
        </button>
      </form>
      <a href="/p/<%= p.slug %>" class="pc-btn pc-btn-secondary">
        <i class="ri-eye-line"></i>
        <span>Xem chi tiết</span>
      </a>
    </div>
  </div>
</article>

<style>
