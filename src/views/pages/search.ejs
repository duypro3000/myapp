<%- include('../partials/head') %>
<%- include('../partials/header') %>

<section class="container section search-page" data-animate="fade">
  <div class="search-layout">
    <!-- Sidebar Filters -->
    <aside class="search-filters" data-animate="fade-up">
      <div class="filter-card">
        <h3 class="filter-title">
          <i class="ri-filter-3-line"></i>
          B·ªô l·ªçc t√¨m ki·∫øm
        </h3>
        
        <form method="get" action="/search" class="filter-form" id="filterForm">
          <% if (q) { %>
            <input type="hidden" name="q" value="<%= q %>">
          <% } %>
          
          <!-- Filter theo gi√° -->
          <div class="filter-group">
            <label class="filter-label">
              <i class="ri-money-dollar-circle-line"></i>
              L·ªçc theo gi√°
            </label>
            <div class="price-inputs">
              <div class="price-input-wrapper">
                <label>T·ª´ (‚Ç´)</label>
                <input 
                  type="number" 
                  name="min_price" 
                  placeholder="0" 
                  value="<%= filters.min_price || '' %>"
                  min="0"
                  class="price-input"
                />
              </div>
              <div class="price-input-wrapper">
                <label>ƒê·∫øn (‚Ç´)</label>
                <input 
                  type="number" 
                  name="max_price" 
                  placeholder="Kh√¥ng gi·ªõi h·∫°n" 
                  value="<%= filters.max_price || '' %>"
                  min="0"
                  class="price-input"
                />
              </div>
            </div>
          </div>
          
          <!-- Filter theo danh m·ª•c -->
          <div class="filter-group">
            <label class="filter-label">
              <i class="ri-folder-line"></i>
              Danh m·ª•c
            </label>
            <div class="category-list">
              <% categories.forEach(cat => { %>
                <label class="checkbox-label">
                  <input 
                    type="radio" 
                    name="category" 
                    value="<%= cat.id %>"
                    <%= filters.category_id == cat.id ? 'checked' : '' %>
                  />
                  <span><%= cat.name %></span>
                </label>
              <% }) %>
              <label class="checkbox-label">
                <input 
                  type="radio" 
                  name="category" 
                  value=""
                  <%= !filters.category_id ? 'checked' : '' %>
                />
                <span>T·∫•t c·∫£ danh m·ª•c</span>
              </label>
            </div>
          </div>
          
          <!-- S·∫Øp x·∫øp -->
          <div class="filter-group">
            <label class="filter-label">
              <i class="ri-sort-desc"></i>
              S·∫Øp x·∫øp theo
            </label>
            <select name="sort" class="sort-select">
              <option value="newest" <%= filters.sort === 'newest' ? 'selected' : '' %>>M·ªõi nh·∫•t</option>
              <option value="price_asc" <%= filters.sort === 'price_asc' ? 'selected' : '' %>>Gi√°: Th·∫•p ‚Üí Cao</option>
              <option value="price_desc" <%= filters.sort === 'price_desc' ? 'selected' : '' %>>Gi√°: Cao ‚Üí Th·∫•p</option>
              <option value="name_asc" <%= filters.sort === 'name_asc' ? 'selected' : '' %>>T√™n: A ‚Üí Z</option>
              <option value="name_desc" <%= filters.sort === 'name_desc' ? 'selected' : '' %>>T√™n: Z ‚Üí A</option>
            </select>
          </div>
          
          <div class="filter-actions">
            <button type="submit" class="btn btn-primary filter-btn">
              <i class="ri-search-line"></i>
              √Åp d·ª•ng b·ªô l·ªçc
            </button>
            <a href="/search<%= q ? '?q=' + encodeURIComponent(q) : '' %>" class="btn btn-outline filter-btn">
              <i class="ri-refresh-line"></i>
              X√≥a b·ªô l·ªçc
            </a>
          </div>
        </form>
      </div>
    </aside>
    
    <!-- Main Content -->
    <main class="search-results">
      <div class="search-header">
        <h2 class="section-title" data-animate="fade-up">
          <% if (q) { %>
            üîé K·∫øt qu·∫£ t√¨m ki·∫øm: 
            <span class="highlight">"<%= q %>"</span>
          <% } else { %>
            üîé T·∫•t c·∫£ s·∫£n ph·∫©m
          <% } %>
        </h2>
        
        <% if (total > 0) { %>
          <div class="result-summary muted" data-animate="fade-up" data-delay="100">
            T√¨m th·∫•y <strong><%= total %></strong> s·∫£n ph·∫©m ph√π h·ª£p
          </div>
        <% } %>
      </div>

      <% if (!items || items.length === 0) { %>
        <div class="empty glass-box" data-animate="zoom-in">
          <div class="empty-icon">üîç</div>
          <h3>Kh√¥ng t√¨m th·∫•y s·∫£n ph·∫©m</h3>
          <p>Kh√¥ng c√≥ s·∫£n ph·∫©m n√†o ph√π h·ª£p v·ªõi b·ªô l·ªçc c·ªßa b·∫°n.</p>
          <a href="/search<%= q ? '?q=' + encodeURIComponent(q) : '' %>" class="btn btn-primary">
            <i class="ri-refresh-line"></i>
            X√≥a b·ªô l·ªçc
          </a>
        </div>
      <% } else { %>
        <div class="grid4" data-skeleton="true">
          <% items.forEach((p, i) => { %>
            <div data-animate="fade-up" data-delay="<%= i * 60 %>">
              <%- include('../partials/product-card', { p, csrfToken }) %>
            </div>
          <% }) %>
        </div>
        
        <!-- Pagination -->
        <% if (total > 12) { %>
          <div class="pagination" data-animate="fade-up">
            <% 
              const totalPages = Math.ceil(total / 12);
              const buildParams = (p) => {
                const params = new URLSearchParams();
                if (q) params.append('q', q);
                if (filters.min_price) params.append('min_price', filters.min_price);
                if (filters.max_price) params.append('max_price', filters.max_price);
                if (filters.category_id) params.append('category', filters.category_id);
                if (filters.sort) params.append('sort', filters.sort);
                if (p > 1) params.append('page', p);
                return params.toString();
              };
            %>
            <% if (page > 1) { %>
              <a href="?<%= buildParams(page - 1) %>" class="pagination-btn">
                <i class="ri-arrow-left-line"></i> Tr∆∞·ªõc
              </a>
            <% } %>
            <span class="pagination-info">
              Trang <strong><%= page %></strong> / <strong><%= totalPages %></strong>
            </span>
            <% if (page < totalPages) { %>
              <a href="?<%= buildParams(page + 1) %>" class="pagination-btn">
                Sau <i class="ri-arrow-right-line"></i>
              </a>
            <% } %>
          </div>
        <% } %>
      <% } %>
    </main>
  </div>
</section>

<%- include('../partials/footer') %>

<style>
  /* ============== SEARCH PAGE LAYOUT ============== */
  .search-page {
    max-width: 1400px;
    margin: 2rem auto;
    padding: 0 1rem;
  }

  .search-layout {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 2rem;
    align-items: start;
  }

  /* ============== FILTERS SIDEBAR ============== */
  .search-filters {
    position: sticky;
    top: 100px;
  }

  .filter-card {
    background: var(--elev);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: var(--shadow-sm);
  }

  .filter-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--primary-700);
    margin: 0 0 1.5rem 0;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--border);
  }

  .filter-title i {
    font-size: 1.2rem;
  }

  .filter-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .filter-group {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .filter-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    font-size: 0.95rem;
    color: var(--text);
  }

  .filter-label i {
    color: var(--primary);
  }

  /* Price Inputs */
  .price-inputs {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .price-input-wrapper {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
    position: relative;
  }

  .price-input-wrapper > label {
    font-size: 0.85rem;
    color: var(--muted);
    font-weight: 500;
  }

  .price-input {
    width: 100%;
    padding: 0.6rem 0.8rem;
    border: 1.5px solid var(--border);
    border-radius: 8px;
    background: var(--elev);
    color: var(--text);
    font-size: 0.95rem;
    transition: all 0.2s ease;
  }

  .price-input:focus {
    border-color: var(--primary);
    box-shadow: 0 0 0 3px var(--primary-100);
    outline: none;
  }

  /* Category List */
  .category-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    max-height: 300px;
    overflow-y: auto;
    padding-right: 0.5rem;
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.6rem;
    border-radius: 8px;
    cursor: pointer;
    transition: background 0.2s ease;
    font-size: 0.9rem;
  }

  .checkbox-label:hover {
    background: var(--primary-100);
  }

  .checkbox-label input[type="radio"] {
    width: 18px;
    height: 18px;
    cursor: pointer;
    accent-color: var(--primary);
  }

  .checkbox-label span {
    flex: 1;
    color: var(--text);
  }

  /* Sort Select */
  .sort-select {
    width: 100%;
    padding: 0.65rem 0.8rem;
    border: 1.5px solid var(--border);
    border-radius: 8px;
    background: var(--elev);
    color: var(--text);
    font-size: 0.95rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .sort-select:focus {
    border-color: var(--primary);
    box-shadow: 0 0 0 3px var(--primary-100);
    outline: none;
  }

  /* Filter Actions */
  .filter-actions {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .filter-btn {
    width: 100%;
    justify-content: center;
    padding: 0.7rem;
    font-weight: 600;
  }

  /* ============== SEARCH RESULTS ============== */
  .search-results {
    min-height: 400px;
  }

  .search-header {
    margin-bottom: 1.5rem;
  }

  .highlight {
    color: var(--primary);
    background: rgba(25, 118, 210, 0.1);
    padding: 0.1rem 0.4rem;
    border-radius: 0.3rem;
  }

  .result-summary {
    font-size: 1rem;
    margin-top: 0.5rem;
    color: var(--muted);
  }

  /* Empty State */
  .glass-box {
    background: var(--elev);
    border: 1px solid var(--border);
    border-radius: 1rem;
    padding: 3rem 2rem;
    box-shadow: var(--shadow-sm);
    text-align: center;
    margin: 2rem 0;
  }

  .empty-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  .glass-box h3 {
    font-size: 1.3rem;
    margin-bottom: 0.5rem;
    color: var(--text);
  }

  .glass-box p {
    color: var(--muted);
    margin-bottom: 1.5rem;
  }

  /* Pagination */
  .pagination {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
    padding: 1.5rem 0;
  }

  .pagination-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.2rem;
    background: var(--elev);
    color: var(--primary-700);
    border: 1.5px solid var(--border);
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .pagination-btn:hover {
    background: var(--primary-100);
    border-color: var(--primary);
    transform: translateY(-2px);
  }

  .pagination-info {
    color: var(--text);
    font-size: 0.95rem;
  }

  /* ============== RESPONSIVE ============== */
  @media (max-width: 1024px) {
    .search-layout {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .search-filters {
      position: static;
    }

    .filter-card {
      position: sticky;
      top: 80px;
      z-index: 10;
    }
  }

  @media (max-width: 768px) {
    .search-page {
      padding: 0 0.5rem;
    }

    .grid4 {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .filter-card {
      padding: 1rem;
    }

    .category-list {
      max-height: 200px;
    }
  }

  @media (max-width: 480px) {
    .grid4 {
      grid-template-columns: 1fr;
    }

    .pagination {
      flex-direction: column;
      gap: 0.75rem;
    }
  }
</style>

<script>
  // Auto-submit form when sort changes
  document.addEventListener('DOMContentLoaded', () => {
    const sortSelect = document.querySelector('.sort-select');
    if (sortSelect) {
      sortSelect.addEventListener('change', () => {
        document.getElementById('filterForm').submit();
      });
    }
  });
</script>
