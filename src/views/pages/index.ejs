<script>
  document.addEventListener('DOMContentLoaded', () => {
    // ƒê·ª£i Swiper library load xong (n·∫øu d√πng defer)
    function initHeroSwiper() {
      if (typeof Swiper === 'undefined') {
        console.warn('Swiper library ch∆∞a ƒë∆∞·ª£c load, ƒë·ª£i th√™m...');
        setTimeout(initHeroSwiper, 100);
        return;
      }
      
      const heroSwiperEl = document.querySelector('.hero-swiper');
      if (!heroSwiperEl) return;
      
      // Hero Carousel with fade effect
      const heroSwiper = new Swiper('.hero-swiper', {
        loop: true,
        autoplay: { 
          delay: 5000, 
          disableOnInteraction: false
        },
        pagination: { 
          el: '.hero-pagination', 
          clickable: true,
          dynamicBullets: true
        },
        navigation: { 
          nextEl: '.hero-nav-next', 
          prevEl: '.hero-nav-prev'
        },
        effect: 'fade',
        fadeEffect: {
          crossFade: true
        },
        speed: 1000,
        grabCursor: true,
        keyboard: {
          enabled: true,
          onlyInViewport: true
        }
      });
      
      // Pause autoplay on hover
      heroSwiperEl.addEventListener('mouseenter', () => {
        if (heroSwiper && heroSwiper.autoplay) {
          heroSwiper.autoplay.stop();
        }
      });
      heroSwiperEl.addEventListener('mouseleave', () => {
        if (heroSwiper && heroSwiper.autoplay) {
          heroSwiper.autoplay.start();
        }
      });
      
      console.log('Hero Swiper ƒë√£ ƒë∆∞·ª£c kh·ªüi t·∫°o th√†nh c√¥ng');
    }
    
    initHeroSwiper();

    if (document.querySelector('.flash-swiper')) {
      new Swiper('.flash-swiper', {
        slidesPerView: 1,
        spaceBetween: 16,
        breakpoints: { 640: { slidesPerView: 2 }, 1024: { slidesPerView: 4 } },
        pagination: { el: '.flash-swiper .swiper-pagination', clickable: true },
        navigation: { nextEl: '.flash-swiper .swiper-button-next', prevEl: '.flash-swiper .swiper-button-prev' }
      });
    }
    if (document.querySelector('.posts-swiper')) {
      new Swiper('.posts-swiper', {
        slidesPerView: 1,
        spaceBetween: 16,
