<%- include('../partials/head') %>
<%- include('../partials/header') %>

<section class="container section blog-list" data-animate="fade">
  <h2 class="section-title" data-animate="fade-up">üì∞ Blog / Tin t·ª©c</h2>
  
  <div class="grid3" data-skeleton="true">
    <% posts.forEach((post, i) => { %>
      <a class="post card glass-card" 
         href="/blog/<%= post.slug %>" 
         data-animate="fade-up" 
         data-delay="<%= i * 80 %>">
        <img src="<%= post.cover_image_url || '/public/img/placeholder.png' %>" 
             alt="<%= post.title %>" 
             class="post-image"/>
        <div class="post-body">
          <h3 class="post-title"><%= post.title %></h3>
          <p class="post-excerpt"><%= post.excerpt %></p>
          <span class="read-more">ƒê·ªçc ti·∫øp ‚Üí</span>
        </div>
      </a>
    <% }) %>
  </div>
</section>

<%- include('../partials/footer') %>

<style>
  /* üîπ Blog list styling */
  .blog-list {
    max-width: 1100px;
    margin: 2rem auto;
  }

  .glass-card {
    background: rgba(255,255,255,0.08);
    border: 1px solid var(--border);
    border-radius: 1rem;
    overflow: hidden;
    transition: all .3s ease;
    display: flex;
    flex-direction: column;
    box-shadow: 0 8px 16px rgba(0,0,0,0.1);
  }

  .glass-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 24px rgba(0,0,0,0.2);
  }

  .post-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .post-body {
    padding: 1rem 1.2rem;
  }

  .post-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--primary-700);
    margin-bottom: .4rem;
  }

  .post-excerpt {
    font-size: .95rem;
    color: var(--muted); /* D√≤ng n√†y ƒë√£ x·ª≠ l√Ω S√°ng/T·ªëi */
    margin-bottom: .6rem;
  }

  .read-more {
    font-size: .9rem;
    font-weight: 500;
    color: var(--primary);
    text-decoration: none;
  }

  .read-more:hover {
    text-decoration: underline;
  }

  @media (prefers-color-scheme: dark) {
    .glass-card {
      background: rgba(255,255,255,0.05);
      box-shadow: 0 8px 24px rgba(0,0,0,0.4);
    }
    /* === ƒê√£ x√≥a .post-excerpt color ·ªü ƒë√¢y v√¨ kh√¥ng c·∫ßn thi·∫øt === */
  }

  @media (max-width: 768px) {
    .post-image { height: 160px; }
  }
</style>